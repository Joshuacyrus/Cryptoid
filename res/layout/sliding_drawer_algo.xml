<?xml version="1.0" encoding="utf-8"?>

<SlidingDrawer
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:id="@+id/SlidingDrawer"
		android:handle="@+id/slideHandleButton"
		android:content="@+id/contentLayout"
		android:padding="10dip"
		android:layout_height="280dip">
		
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/slideHandleButton"
			android:background="@drawable/closearrow"
		></Button>





		<LinearLayout
			android:layout_width="wrap_content"
			android:id="@+id/contentLayout"
			android:orientation="vertical"
			android:gravity="center|top"
			android:padding="10dip"
			android:background="#C0C0C0"
			android:layout_height="wrap_content">









		<TableLayout
			
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:stretchColumns="1"
			>
			
			<TableRow
			android:layout_gravity="center_horizontal"
			>
				<Button
					android:id="@+id/algos_button_copy"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/copy"
				    android:textColor="#383838"
				    android:text="Copy"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
		       	<Button
					android:id="@+id/algos_button_import"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/import_picture"
				    android:textColor="#383838"
				    android:text="Import"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
				<Button
					android:id="@+id/algos_button_send"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/send"
				    android:textColor="#383838"
				    android:text="Send"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
				</TableRow>
				
			<TableRow
				android:layout_gravity="center">
				<Button
					android:id="@+id/algos_button_addcipher"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/add"
				    android:textColor="#383838"
				    android:text="add cipher"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
				<Button
					android:id="@+id/algos_button_addplain"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/add"
				    android:textColor="#383838"
				    android:text="add decipher"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
				<Button
					android:id="@+id/algos_button_analyze"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/analyze"
				    android:textColor="#383838"
				    android:text="Analyze"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
				 	android:enabled="false"
		       	></Button>
			</TableRow>
			
			<TableRow
				android:gravity="center_horizontal">
				<Button
					android:id="@+id/algos_button_back"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/back"
				    android:textColor="#383838"
				    android:text="Back"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
				<Button
					android:id="@+id/algos_button_brute"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/brute"
				    android:textColor="#383838"
				    android:text="Brute"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
				 	android:enabled="false"
		       	></Button>
				<Button
					android:id="@+id/algos_button_about"
				    android:layout_width="100px"
				    android:layout_height="70px"
				    android:drawableTop="@drawable/about"
				    android:textColor="#383838"
				    android:text="About"
				    android:padding="2sp"
				    android:maxHeight="80px"
				 	android:maxWidth="80px"
				 	android:layout_gravity="center_vertical"
				 	android:drawablePadding="-10sp"
		       	></Button>
			</TableRow>
		</TableLayout>
		
		
		</LinearLayout>
		
		
</SlidingDrawer>