<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingTop="62px">
<ScrollView
	android:id="@+id/widget29"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinearLayout02"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/title_brute_force"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Brute Force"
			android:textStyle="bold"
			android:layout_centerHorizontal="true"
			android:layout_margin="10px"
		/>
		<EditText
			android:id="@+id/brute_input_text"
			android:layout_width="fill_parent"
			android:layout_height="100px"
			android:text=""
			android:textSize="18sp"
			android:layout_below="@+id/title_brute_force"
		>
		</EditText>
		<Button
			android:id="@+id/button_start"
			android:layout_width="100dip"
			android:layout_height="wrap_content"
			android:text="Start"
			android:layout_below="@+id/brute_input_text"
			android:layout_centerHorizontal="true"
		></Button>
		<ProgressBar
			android:id="@+id/progress_bar_horizontal"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@+id/progress_bar_loop"
			android:layout_below="@+id/button_start"
			android:visibility="invisible"
			>
		</ProgressBar>
		<ProgressBar
			android:id="@+id/progress_bar_loop"
			android:layout_width="30px"
			android:layout_height="30px"
			android:layout_toLeftOf="@+id/picture_finished"
			android:layout_alignTop="@+id/progress_bar_horizontal"
			android:visibility="invisible"
		/>
		<ImageView
			android:id="@+id/picture_finished"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/progress_bar_loop"
			android:src="@drawable/ok"
			android:layout_alignParentRight="true"
			android:visibility="invisible"
		/>
		<TextView
			android:id="@+id/text_result_title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Report"
			android:textStyle="bold"
			android:layout_centerHorizontal="true"
			android:layout_margin="5px"
			android:layout_below="@+id/progress_bar_horizontal"
			android:visibility="invisible"
		/>
		<TextView
			android:id="@+id/text_result"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:layout_margin="5px"
			android:layout_below="@+id/text_result_title"
		/>
		<Button
			android:id="@+id/button_save"
			android:layout_width="140dip"
			android:layout_height="wrap_content"
			android:layout_below="@+id/text_result"
			android:layout_centerHorizontal="true"
			android:visibility="gone"
			android:text="Save Report"
		/>
	</RelativeLayout>
</ScrollView>
</LinearLayout>