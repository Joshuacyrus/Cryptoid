<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_gravity="bottom">

  <TabHost android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TabWidget android:id="@android:id/tabs"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:visibility="visible"
    />
        <FrameLayout android:id="@android:id/tabcontent"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       >



	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/widget29"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			xmlns:android="http://schemas.android.com/apk/res/android">
		
			<RelativeLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/LinearLayout02"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">
				





<TextView
	android:id="@+id/main_basic_title"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="to be replace"
	android:textStyle="bold"
	android:layout_centerHorizontal="true"
/>
<TextView
	android:id="@+id/main_basic_plain_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Plain text"
	android:layout_below="@+id/main_basic_title"
	android:layout_alignParentLeft="true"
/>

<EditText
	android:id="@+id/main_basic_plain"
	android:layout_width="fill_parent"
	android:layout_height="120dip"
	android:text=""
	android:textSize="18sp"
	android:layout_below="@+id/main_basic_plain_label"
	android:layout_alignParentLeft="true"
/>
<RadioGroup
	android:id="@+id/main_basic_choice"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_below="@+id/main_basic_plain"
	android:layout_alignParentLeft="true"
>
	<RadioButton
		android:id="@+id/main_basic_radio_cipher"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Cipher"
		android:checked="true"
	>
	</RadioButton>
	<RadioButton
		android:id="@+id/main_basic_radio_decipher"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Decipher"
	>
	</RadioButton>
</RadioGroup>
<Button
	android:id="@+id/main_basic_button_go"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="START"
	android:layout_toRightOf="@+id/main_basic_choice"
	android:layout_alignBottom="@+id/main_basic_choice"
	android:layout_marginLeft="10dip"
>
</Button>
<TextView
	android:id="@+id/main_basic_cipher_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Ciphered text"
	android:layout_below="@+id/main_basic_choice"
	android:layout_alignParentLeft="true"
/>


<EditText
	android:id="@+id/main_basic_cipher"
	android:layout_width="fill_parent"
	android:layout_height="120dip"
	android:text=""
	android:textSize="18sp"
	android:layout_below="@+id/main_basic_cipher_label"
	android:layout_alignParentLeft="true"
/>









			</RelativeLayout>
		</ScrollView>
		
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:gravity="bottom"
			android:layout_alignParentBottom="true"
			>

			<include layout="@layout/sliding_drawer_algo"/>
			
   		</LinearLayout>
	
	</RelativeLayout>
	    </FrameLayout>
  </TabHost>
</LinearLayout>